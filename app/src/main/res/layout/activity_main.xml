<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.novonze.chip.MainActivity">

    <TextView
        android:id="@+id/currencyLabel"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result1" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="test"
        android:maxLines="1"
        android:layout_below="@+id/canadaTextbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/canadaTextbox"
        android:layout_alignStart="@+id/canadaTextbox"
        android:layout_marginTop="10dp"
        android:checkedButton="@+id/toCADRadioButton">
        <RadioButton
            android:id="@+id/toUSDRadioButton"
            android:text="CAD to USD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_below="@+id/canadaTextbox"
            android:layout_alignStart="@+id/canadaTextbox"
            android:layout_marginTop="20dp"
            android:textColorLink="@android:color/background_light"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:id="@+id/toCADRadioButton"
            android:text="USD to CAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/toUSDRadioButton"
            android:layout_alignStart="@+id/toUSDRadioButton"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked" />
    </RadioGroup>

    <EditText
        android:id="@+id/canadaTextbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:maxLines="1"
        android:textSize="30sp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:background="#19000000"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
